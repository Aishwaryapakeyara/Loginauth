 
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  </thead>
 
  <tbody>
    <% @posts.each do |p| %>
    <tr>
      <td><%= p.title %></td>
      <td><%= p.content %></td>
      <td><%= link_to "Destroy", post_path(p), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
 
<br>
 
<%= link_to 'New post', new_post_path%>

<%= link_to "Back", root_path%>